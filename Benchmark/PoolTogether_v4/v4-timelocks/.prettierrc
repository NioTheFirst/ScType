{
  "printWidth": 100,
  "tabWidth": 4,
    "overrides": [
      {
        "files": "*.*.{ts,js}",
        "options": {
          "parser": "typescript",
          "trailingComma": "all",
          "arrowParens": "always",
          "singleQuote": true
        }
      },
      {
        "files": "*.sol",
        "options": {
          "bracketSpacing": true,
          "explicitTypes": "always"
        }
      }
    ]
}
